<div class="btn col-3 m-2"
      role="button"
      data-bs-toggle="button"
      data-controller="illness-preferences"
      data-illness-preferences-target="button"
      data-illness-preferences-active-value="<%= current_user.illnesses.where(id: illness.id).exists? %>"
      data-illness-preferences-urladd-value="<%= add_user_illness_path(illness) %>"
      data-illness-preferences-urlremove-value="<%= remove_user_illness_path(illness) %>"
      data-action="click->illness-preferences#toggle"
      >
  <%= illness.name %>
</div>
