<div class="container" data-controller="illness-preferences-results">
  <h1>Preferences</h1>
  <div class="row justify-content-center">
    <% @illnesses.each do |illness| %>
      <%= render "user_illnesses/user_preferences", illness: illness %>
    <% end %>
  </div>
  <h2>Your result</h2>
  <div id="vitamins">
    <%= render "vitamins_result", nutrients_with_food: @nutrients_with_food %>
  </div>
</div>


<%= link_to "Send me an email", send_path, class:'btn btn-primary'  %>
