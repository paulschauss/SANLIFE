<h1>Your nutritional plan this week</h1>

<h2><%= NutrientFood.first.food.name %></h2>
<h2><%= NutrientFood.first.nutrient.name %></h2>


<%= link_to "test", foods_path(nutrient_ids: Nutrient.all.sample(4).map(&:id)) %>


<hr>

<ul>
  <% @nutrients.each do |nutrient| %>
    <li>
      <%= nutrient.name %>
      <ul>
          <% nutrient.foods.first(4).each do |food| %>
          <li>
            <%= food.name %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
